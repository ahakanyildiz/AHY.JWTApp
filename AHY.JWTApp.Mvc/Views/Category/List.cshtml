@model List<CategoryListModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-danger">
    @if (TempData["hata"] != null)
    {
        TempData["hata"]?.ToString();
    }
</div>

<a class="btn btn-success" asp-action="Create" asp-controller="Category">Kategori Ekle</a>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Definition</td>
                <td><a class="btn btn-danger" asp-action="Remove" asp-controller="Category" asp-route-id="@category.Id">Sil</a></td>
                <td><a class="btn btn-warning" asp-action="Update" asp-controller="Category" asp-route-id="@category.Id" >Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

