@model UserLoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Giriş Yap</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
</head>
<body>
    <form method="post" asp-action="Login" asp-controller="Account">

        <div class="mb-3">
            <label class="form-label">Kullanıcı Adı:</label>
            <input asp-for="@Model.Username" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Username"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Şifre:</label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
        </div>

    </form>
</body>
</html>
